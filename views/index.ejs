<%- include("partials/header") %> 
<div class="ui main text container">
    <div class="ui huge header">Physics blog</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(blog=>{ %>
            
                <div class="item">
                    <div class="image"><img src="<%= blog.image %> ">
                     </div>   
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %> "><%= blog.title %> </a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %> </span>
                        </div>
                        <div class="description">
                            <p><%- blog.body.substring(0,100) %> </p>
                        </div>
                        <div class="extra">
                            <a class="ui right labeled icon pink button" href="/blogs/<%= blog._id %> "><i class="right arrow icon"></i>Read more</a>
                        </div>
                    </div>
                    
                </div>
            <% }); %>     
        </div>
    </div>
</div>
    
  
<%- include("partials/footer") %>    